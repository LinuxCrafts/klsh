#Source: https://misc.flogisoft.com/bash/tip_colors_and_formatting
function colortest {
  while true; do clear; echo -e ${resetall}${lightbluebg}${blink}${dim}${bold}${inverted}${underlined}${red}hello$resetall; sleep 0.2; done
}
